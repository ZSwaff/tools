#!/usr/bin/env bash
# -*- coding: utf-8 -*-

# git save, add, commit, pull, then push

set -e

if [[ $1 = "" ]]; then
	echo -n "Commit message: "; read m
else
	m="$*"
fi

git config credential.helper 'cache --timeout=360000'
git config credential.helper cache
git add --all .
git commit -m "$m"
git pull
git push

set +e

#!/usr/bin/env bash
# -*- coding: utf-8 -*-

# cd then ls

if [[ $1 = "" ]]; then
	d=~
else
	d=${*}
fi

echo $d
if [[ $d = -* ]]; then
	d=~${d}
fi

if [[ -e $d ]]; then
	if [[ ! -f $d ]]; then
		\cd ${d}
		l
	else
		echo ${d} is a file
	fi
else
	poss=()
	for file in *; do
		if [[ -f $file ]]; then
			continue
		fi
		if [[ $file = ${d}* ]]; then
			poss+=$file
		fi
	done
	if [[ ${#poss[*]} = 0 ]]; then
		echo ${d} does not exist
		if [[ ${d} != ${WORKSPACE}* ]]; then
			echo Checking for ${d} in workspace
			. cdls ${WORKSPACE}/${d}
		fi
	else
		if [[ ${#poss[*]} = 1 ]]; then
			echo ${d} corrected to ${poss[1]}
			. cdls ${poss[1]}
		else
			n=${#poss[*]}
			for ((i=0;i<${#poss[*]};i++)); do
				echo "[${i}] ${poss[i+1]}"
			done
			read c
			echo ${d} corrected to ${poss[c+1]}
			. cdls ${poss[c+1]}
		fi
	fi
fi

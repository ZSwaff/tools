#!/usr/bin/env bash
# -*- coding: utf-8 -*-

# git status for all folders in folder

#git config credential.helper 'cache --timeout=360000'
#git config credential.helper cache

for file in *
do
	if [[ -f $file ]]; then
		continue
	fi
	echo "-------------------------------------------------"
	echo "$file"
	echo "------------------------"
	cd "$file"
	#git remote update > /dev/null
	git status
	cd ..
	echo "-------------------------------------------------"
	echo
done


#!/usr/bin/env bash
# -*- coding: utf-8 -*-

# Plenty
alias cli='${WORKSPACE}/plenty-utils-python/plentyservice/pcli'  # run Plenty service CLI
alias qr='${WORKSPACE}/qr_generator/plentyqrgen/gen'  # generate QR code
alias bs='p3 ${WORKSPACE}/beansprout/beansprout.py'  # run beansprout
alias ghr='release.py'  # creates a new GitHub release
alias wrb='docker rm app; bs initStaging beansprout.json && bs buildStaging beansprout.json && bs runStaging beansprout.json'  # clean docker and build and run JAR with beansprout
alias eml='email_deploy'  # set up an email to be sent when a deploy finishes
alias stg='stage_branch.py'  # activates the current branch as a staging application
alias rstg='stage_branch.py -d'  # deactivates the current branch as a staging application
